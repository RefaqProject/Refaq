<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.florent37.diagonallayout.DiagonalLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        app:diagonal_angle="0"
        app:diagonal_position="top"
        app:diagonal_direction="right">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image1"
            />
    <RelativeLayout
    android:orientation="vertical"
    android:background="@drawable/back"


    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/btn3"
            android:gravity="center"
            android:text="L"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fff"
            android:text="@string/regist_kafeel"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/name"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/name_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/ID_Number"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/id_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/mail"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/email_kafeel" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/password"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:inputType="textPassword"
            android:paddingRight="7dp"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/password_kafeel" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/Select_Institution_Individual"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:paddingRight="7dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/select_kafeel" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/start_Guarantee"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:paddingRight="7dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/start_kafeel" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/End_Guarantee"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/end_kafeel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/Date_Guarantee"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/date_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/How_Payment"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/how_pay_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/amount_Guarantee"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/amount_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/Number_payments"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/number_pay_kafeel" />
        <EditText
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="@string/number_Orphans_Guaranteed"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:inputType="text"
        style="@style/AppTheme"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edittext"
        android:id="@+id/number_orphan_kafeel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/sex"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/type_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/job"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/job_kafeel" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="@string/Nationality"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:inputType="text"
            style="@style/AppTheme"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext"
            android:id="@+id/nationality_kafeel" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="@string/Regist"
            android:id="@+id/register_kafeel"
            android:layout_below="@+id/linearLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="#717171"
            android:background="@drawable/btn1"
            android:layout_marginTop="20dp" />


    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:indeterminate="false" />
</RelativeLayout>
    </com.github.florent37.diagonallayout.DiagonalLayout>
</ScrollView>