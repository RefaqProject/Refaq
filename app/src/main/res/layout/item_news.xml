<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/news_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/newss_title"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="تعد الجمعيات الخيرية إحدى مؤسسات المجتمع المدني التي تهدف إلى استثمار المساعدات الممنوحة من قبل الشركات والتجار والأغنياء"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/newss_img"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/image1" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>