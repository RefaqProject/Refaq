<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.florent37.diagonallayout.DiagonalLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        app:diagonal_angle="0"
        app:diagonal_position="top"
        app:diagonal_direction="right">

        <com.flaviofaria.kenburnsview.KenBurnsView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image1"
            />
        <RelativeLayout
            android:orientation="vertical"
            android:background="@drawable/back"


            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="35dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn3"
                    android:gravity="center"
                    android:text="L"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:text="@string/reg_poor"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="@string/name"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"

                    android:inputType="textEmailAddress"
                    style="@style/AppTheme"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/name_poor" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="@string/phone"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"

                    android:inputType="text"
                    style="@style/AppTheme"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/phone_poor" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="@string/State"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"

                    android:inputType="text"
                    style="@style/AppTheme"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/state_poor" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="@string/address"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp" android:inputType="text"
                    style="@style/AppTheme"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/addrss_poor" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="@string/extent_of_need"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:inputType="text"
                    style="@style/AppTheme"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext"
                    android:id="@+id/need_poor" />

                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:text="@string/Regist"
                    android:id="@+id/regist_poor"
                    android:layout_below="@+id/linearLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textColor="#717171"
                    android:background="@drawable/btn1"
                    android:layout_marginTop="20dp" />


            </LinearLayout>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar2"
                android:layout_below="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:indeterminate="false" />
        </RelativeLayout>
    </com.github.florent37.diagonallayout.DiagonalLayout>
</ScrollView>